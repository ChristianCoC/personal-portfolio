---
const PROJECTS = [
  {
    title: "Personal Portfolio",
    description: "We create a personal portfolio with Astro and Tailwind CSS.",
    link: "#",
    github: "#",
    image: "public/porfolio.webp",
    tags: ["Astro", "Tailwind CSS", "Javascript"],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold mb-2 text-blue-400">{title}</h3>
      <p class="text-lg mb-4 text-gray-500">{description}</p>
      <ul class="flex gap-2 text-pretty font-semibold">
        {tags.map((tag) => (
          <li class="rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:scale-110 hover:bg-white/10 transition">
            {tag}
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-blue-400/10 pt-4"
        src={image}
        alt={`Project screenshot ${image}`}
      />
    </article>
  ))
}
